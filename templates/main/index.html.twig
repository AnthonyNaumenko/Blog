{% extends 'base.html.twig' %}

{% block title %}Main page{% endblock %}

{% block body %}
    {% for posts in post %}

        <div class="container">

            <div class="row mb-4">

                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h3 class="mb-0">
                                <a class="text-dark">{{ posts.title }}</a>
                            </h3>
                            <div class="mb-1 text-muted">{{ posts.date|date("d.M.y H:m:s") }}</div>

                            <div class="card-text mb-auto col-3 text-truncate">{{ posts.text }}</div>
                            <div>
                                <p>Коментариев {{ posts.comment.count }}</p>
                            </div>
                            <a href="{{ path('post_page', {id: posts.id}) }} ">Continue reading</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


{% endblock %}

