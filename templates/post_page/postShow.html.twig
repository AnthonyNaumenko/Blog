{% extends 'base.html.twig' %}
{% block title %}postShow{% endblock %}

{% block body %}

    {% for post in posts %}

    <div class="container">

        <div class="row mb-4">

            <div class="col-md-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <a class="text-dark">{{ post.title }}</a>
                        </h3>
                        <div class="mb-1 text-muted">{{ post.date|date("d.M.y H:m:s") }}</div>

                        <div class="card-text mb-auto col-3 text-truncate">{{ post.text }}</div>
                        <div>
                            <p>Коментариев {{ post.comment.count }}</p>
                        </div>
                        <a href="{{ path('post_page', {id: post.id}) }} ">Continue reading</a>
                        <div>
                            <a href="{{ path('post_delete', {id: post.id}) }}" class="btn btn-danger">Delete</a>
                            <a href="{{ path('post_edit',  {id: post.id}) }}">Edit post</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}



